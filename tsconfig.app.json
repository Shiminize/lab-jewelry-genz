{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "src/components/aurora/**/*.ts",
    "src/components/aurora/**/*.tsx",
    "src/components/homepage/**/*.ts",
    "src/components/homepage/**/*.tsx",
    "src/components/layout/**/*.ts",
    "src/components/layout/**/*.tsx",
    "src/components/foundation/**/*.ts",
    "src/components/foundation/**/*.tsx",
    "src/components/ui/**/*.ts",
    "src/components/ui/**/*.tsx",
    "src/hooks/**/*.ts",
    "src/hooks/**/*.tsx"
