    "tests/**",
    "src/components/ui/__tests__/**",
    "src/components/ui/CollapsibleSection.tsx",
    "src/app/**",
    "src/app/api/**",
    "src/data/**",
    "src/lib/**",
    "src/services/**",
    "src/types/**",
    "src/components/admin/**",
    "src/components/catalog/**",
    "src/components/customizer/**",
    "src/components/inventory/**",
