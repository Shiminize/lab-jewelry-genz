# GlowGlitch Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
PORT=3000
NEXTAUTH_URL=https://glowglitch.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database
MONGODB_URI=mongodb://username:password@mongodb:27017/glowglitch?authSource=admin
MONGO_ROOT_USERNAME=glowglitch_admin
MONGO_ROOT_PASSWORD=your-mongo-password-here

# Redis Cache
REDIS_URL=redis://:password@redis:6379
REDIS_PASSWORD=your-redis-password-here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key

# AWS S3 for File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=glowglitch-production-assets

# SendGrid Email
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@glowglitch.com

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
HOTJAR_ID=your-hotjar-id
SENTRY_DSN=https://your-sentry-dsn

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password

# CDN
CDN_URL=https://cdn.glowglitch.com

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600

# Feature Flags
ENABLE_3D_CUSTOMIZER=true
ENABLE_CREATOR_PROGRAM=true
ENABLE_GUEST_CHECKOUT=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30