# JWT Authentication Configuration
# Required for the middleware JWT authentication
JWT_SECRET=your-super-secure-secret-key-at-least-32-characters-long

# NextAuth Configuration (already exists but shown for completeness)
NEXTAUTH_SECRET=your-nextauth-secret-key-32-characters-minimum
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://# Database - Secure MongoDB connection with authentication
# For local development - use authentication and proper connection string
MONGODB_URI=mongodb://localhost:27017/glowglitch?authSource=admin&ssl=false&retryWrites=true&w=majority
DATABASE_NAME=glowglitch

# Database Performance Settings (for production scaling)
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=10000
DB_SOCKET_TIMEOUT=30000

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
APPLE_ID=your-apple-id
APPLE_SECRET=your-apple-secret

# Email Service (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe_dashboard

# JWT Token Configuration
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Redis Configuration for Rate Limiting (Optional - falls back to in-memory)
# For production, use Redis for distributed rate limiting across multiple instances
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info

# Application Environment
NODE_ENV=development