{
  "qualityAssurance": {
    "testing": {
      "framework": "Jest",
      "coverage": {
        "minimum": 70,
        "target": 85,
        "exclude": [
          "**/*.d.ts",
          "**/ui/**",
          "**/pages/**",
          "**/layout.tsx",
          "**/loading.tsx",
          "**/error.tsx"
        ]
      },
      "testTypes": {
        "unit": {
          "pattern": "**/*.test.{js,ts}",
          "timeout": 10000
        },
        "integration": {
          "pattern": "**/integration/*.test.{js,ts}",
          "timeout": 30000
        },
        "e2e": {
          "pattern": "**/e2e/*.spec.{js,ts}",
          "timeout": 60000
        },
        "performance": {
          "pattern": "**/performance/*.test.{js,ts}",
          "timeout": 120000
        }
      }
    },
    "codeQuality": {
      "linting": {
        "enabled": true,
        "rules": "strict",
        "extensions": [".js", ".ts", ".tsx"]
      },
      "formatting": {
        "enabled": true,
        "tool": "prettier",
        "enforceOnSave": true
      },
      "typeChecking": {
        "enabled": true,
        "strict": true,
        "noImplicitAny": true
      }
    },
    "performance": {
      "budgets": {
        "bundleSize": "2MB",
        "apiResponseTime": "2000ms",
        "memoryUsage": "512MB",
        "cpuUsage": "80%"
      },
      "monitoring": {
        "realUserMetrics": true,
        "syntheticMonitoring": true,
        "alerts": {
          "errorRate": ">5%",
          "responseTime": ">3000ms",
          "availability": "<99%"
        }
      }
    },
    "security": {
      "scanning": {
        "dependencies": true,
        "static": true,
        "secrets": true
      },
      "policies": {
        "maxUploadSize": "100MB",
        "allowedFileTypes": [".glb", ".png", ".jpg", ".webp", ".avif"],
        "rateLimit": "100/minute"
      }
    },
    "deployment": {
      "environments": {
        "development": {
          "autoTests": true,
          "coverage": false,
          "performance": false
        },
        "staging": {
          "autoTests": true,
          "coverage": true,
          "performance": true,
          "security": true
        },
        "production": {
          "autoTests": true,
          "coverage": true,
          "performance": true,
          "security": true,
          "rollback": true
        }
      },
      "gates": {
        "testsPassing": true,
        "coverageThreshold": 70,
        "performanceBudget": true,
        "securityScan": true
      }
    }
  },
  "monitoring": {
    "healthChecks": {
      "api": "/api/health",
      "database": "/api/health/db",
      "generation": "/api/health/generation",
      "resources": "/api/health/resources"
    },
    "metrics": {
      "collection": "prometheus",
      "dashboard": "grafana",
      "alerts": "alertmanager"
    },
    "logging": {
      "level": "info",
      "format": "json",
      "retention": "30d"
    }
  },
  "documentation": {
    "api": {
      "tool": "openapi",
      "generate": true,
      "validate": true
    },
    "code": {
      "tool": "typedoc",
      "coverage": 80
    },
    "user": {
      "format": "markdown",
      "location": "docs/"
    }
  }
}